<Window x:Class="PlanetesWPF.UI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanetesWPF"
        mc:Ignorable="d"
        Title="UI" Height="1000" Width="1750" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="100">

            </RowDefinition>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0" HorizontalAlignment="Stretch" Height="35" VerticalAlignment="Stretch" >
            <ToolBar RenderTransformOrigin="0.5,0.5"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Menu Background="#00000000">
                    <MenuItem >
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>Multiplayer
                                </TextBlock>
                                <Path VerticalAlignment="Center" Margin="8,2,0,0"
                          Fill="Black" Data="M 0 0 L 3 3 L 6 0 Z"/>
                            </StackPanel>
                        </MenuItem.Header>
                        <MenuItem Header="Host Game" >

                        </MenuItem>
                        <MenuItem Header="Join Game" Click="MenuItem_Click"/>
                    </MenuItem>
                    <MenuItem >
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>Singleplayer</TextBlock>
                                <Path VerticalAlignment="Center" Margin="8,2,0,0" 
                          Fill="Black" Data="M 0 0 L 3 3 L 6 0 Z"/>
                            </StackPanel>
                        </MenuItem.Header>
                        <MenuItem Header="Against 2 bots" Click="MenuItem_Click_1"/>
                        <MenuItem Header="Menu 2-2"/>
                        <MenuItem Header="Menu 2-3"/>
                    </MenuItem>
                    <MenuItem Header="Menu 3"/>
                </Menu>
            </ToolBar>
        </ToolBarTray>
        <Image x:Name="World" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1700" Height="800" Margin="10,10,0,0" Stretch="None" RenderTransformOrigin="0.5,0.5"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="9*" />
            </Grid.ColumnDefinitions>

        </Grid>

    </Grid>
</Window>
